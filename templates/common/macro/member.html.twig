{% macro member_badge_status(member) %}
    {% if member.isActive %}
        <span class="badge text-bg-success">{{ 'global.mp_status_list.active'|trans }}</span>
    {% else %}
        <span class="badge text-bg-secondary">{{ 'global.mp_status_list.retired'|trans }}</span>
    {% endif %}
{% endmacro %}
